#── Cube.obj ───────────────────────────────────────────────────────────────
mtllib cube.mtl      # point to our material file
o Cube               # name the object

# Vertices
v -1.0 -1.0  1.0
v  1.0 -1.0  1.0
v  1.0  1.0  1.0
v -1.0  1.0  1.0
v -1.0 -1.0 -1.0
v  1.0 -1.0 -1.0
v  1.0  1.0 -1.0
v -1.0  1.0 -1.0

# UVs
vt 0.0 0.0
vt 1.0 0.0
vt 1.0 1.0
vt 0.0 1.0

# Normals
vn  0.0  0.0  1.0
vn  0.0  0.0 -1.0
vn  0.0  1.0  0.0
vn  0.0 -1.0  0.0
vn  1.0  0.0  0.0
vn -1.0  0.0  0.0

#── Front face ─────────────────────────────────────────────────────────────
g front
usemtl mat_red
f 1/1/1  2/2/1  3/3/1  4/4/1

#── Back face ──────────────────────────────────────────────────────────────
g back
usemtl mat_green
f 5/1/2  6/2/2  7/3/2  8/4/2

#── Top face ───────────────────────────────────────────────────────────────
g top
usemtl mat_blue
f 4/1/3  3/2/3  7/3/3  8/4/3

#── Bottom face ────────────────────────────────────────────────────────────
g bottom
usemtl mat_yellow
f 1/1/4  5/2/4  6/3/4  2/4/4

#── Right face ─────────────────────────────────────────────────────────────
g right
usemtl mat_magenta
f 2/1/5  6/2/5  7/3/5  3/4/5

#── Left face ──────────────────────────────────────────────────────────────
g left
usemtl mat_cyan
f 1/1/6  4/2/6  8/3/6  5/4/6
